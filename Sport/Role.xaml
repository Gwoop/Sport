<Window x:Class="Sport.Role"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sport"
        mc:Ignorable="d"
        Title="Role" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="219,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Salary" HorizontalAlignment="Left" Margin="423,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button  x:Name="up" Content="Button" HorizontalAlignment="Left" Margin="360,170,0,0" VerticalAlignment="Top" Click="up_Click"/>
        <DataGrid x:Name="Tablichka" Margin="0,243,0,10" SelectionChanged="Tablichka_SelectionChanged"/>
        <Button x:Name="del" Content="Button" HorizontalAlignment="Left" Margin="443,170,0,0" VerticalAlignment="Top" Click="del_Click"/>
        <Button x:Name="in" Content="Button" HorizontalAlignment="Left" Margin="279,170,0,0" VerticalAlignment="Top" Click="in_Click"/>

    </Grid>
</Window>
