        <ComboBox x:Name="cm" HorizontalAlignment="Left" Margin="221,113,0,0" VerticalAlignment="Top" Width="120"/>
        <DataGrid IsReadOnly="True" x:Name="Tablichka" Margin="0,278,0,0" SelectionChanged="Tablichka_SelectionChanged"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="253,202,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="342,202,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="431,202,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <TextBox x:Name="cm1" HorizontalAlignment="Left" Margin="400,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
