<Window x:Class="Sport.Club"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sport"
        mc:Ignorable="d"
        Title="Club" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="Tablichka"  Margin="0,305,0,0" SelectionChanged="Tablichka_SelectionChanged"/>
        <TextBox x:Name="tex" HorizontalAlignment="Left" Margin="310,105,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cm" HorizontalAlignment="Left" Margin="163,103,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cm1" HorizontalAlignment="Left" Margin="449,103,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="203,190,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="343,190,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="482,200,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Content="Мероприятие" HorizontalAlignment="Left" Margin="684,190,0,0" VerticalAlignment="Top" Click="Button_Click_3"/>

    </Grid>
</Window>
